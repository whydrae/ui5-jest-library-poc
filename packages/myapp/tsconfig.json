{
	"compilerOptions": {
		"target": "es2023",
		"module": "es2022",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"allowJs": true,
		"strict": true,
		"strictNullChecks": false,
		"strictPropertyInitialization": false,
		"rootDir": "./webapp",
		"types": ["@openui5/types", "@types/qunit", "mylib", "jest"],
		"paths": {
			"myapp/*": ["./webapp/*"]
		}
	},
	"include": ["./webapp/**/*", "./test/**/*"],
}
